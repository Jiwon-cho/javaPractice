package com.conditnion.controller;

import java.util.Scanner;

public class ConditionController {
	public void ifTest() {
		//if문 활용하기
		//if(조건식){로직}
		Scanner sc=new Scanner(System.in);
		System.out.print("정수 입력: ");
		int su =sc.nextInt();
		
		if(su%2==0) {
			System.out.println("짝수이다");
		}
		
		
	}

}
