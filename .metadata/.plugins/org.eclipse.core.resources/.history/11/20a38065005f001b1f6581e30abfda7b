 public void forInfor() {
	 //중첩 반복문 기본 회전
	 //i,j 처럼 두개 다르게 써야함
	 for(int i=0;i<10;i++) {
		 System.out.println("외곽"+i);
		 for(int j=0;j<5;j++) {
			 System.out.print(j+" ");
			 
		 }
		 System.out.println();
	 }
	 
	 for(int i=2;i<10;i++) {
		 for(int j=1;j<1;j++) {
			 System.out.println(i+"X"+j+"="+(i*j));
		 }
	 }
 }
	 
	 
	 
}       
	
	
	

   	


